run_command() {
  echo "\nâ–¶ï¸ Running: $@"
  output=$("$@" 2>&1)
  status=$?
  if [ $status -eq 0 ]; then
    echo "âœ… $1 successful!"
  else
    echo "âŒ $1 failed!"
    echo "--- Error Output ---"
    echo "$output"
